<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view = "http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/cv_Contacto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/cv_margin"
    card_view:cardCornerRadius="@dimen/cv_corner_radius"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >
        <ImageView
            android:id="@+id/imgFotoCV"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/fishtile_075"/>

        <TextView
            android:id="@+id/tvNombreCV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/name"
            android:textSize="@dimen/nombre_cardview"
            android:textStyle="bold"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tvTelefonoCV"
            android:text="@string/ptelefono"
            android:textSize="@dimen/telefono_cardview_textSize"
            />
        <TextView
            android:id="@+id/tvCorreoCV"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="@dimen/telefono_cardview_textSize"
            android:text="sample@domain.com"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/ivFishyLike"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/fishtile_079" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="right"
                android:text="Likes: "
                android:textStyle="bold"/>

            <TextView
                android:layout_weight="1"
                android:id="@+id/tvLikesCV"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="@dimen/telefono_cardview_textSize"
                android:textStyle="bold"
                android:text="45"/>
        </LinearLayout>



    </LinearLayout>

</android.support.v7.widget.CardView>